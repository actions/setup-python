{
  "name": "setup-python",
  "version": "1.0.0",
  "private": true,
  "description": "Setup python action",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "release": "ncc build src/setup-python.ts && git add -f dist/",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/setup-python.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "GitHub",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.3",
    "semver": "^7.1.3"
  },
  "devDependencies": {
    "@actions/io": "^1.0.2",
    "@actions/tool-cache": "^1.5.2",
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.31",
    "@types/semver": "^7.1.0",
    "@zeit/ncc": "^0.22.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "jest-circus": "^25.1.0",
    "prettier": "^2.0.2",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  },
  "husky": {
    "skipCI": true,
    "hooks": {
      "pre-commit": "npm run build && npm run format-check"
    }
  }
}
